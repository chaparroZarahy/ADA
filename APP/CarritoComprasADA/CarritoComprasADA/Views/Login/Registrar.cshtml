@model CarritoComprasADA.Models.RegisterUser
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Registro de Usuario";
}

@Html.ValidationSummary(true, "", new { @class = "text-danger" })

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <div class="card shadow rounded">
                <div class="card-header bg-success text-white text-center">
                    <h4>Crear cuenta</h4>
                </div>
                <div class="card-body">

                    @if (TempData["Mensaje"] != null)
                    {
                        <div class="alert alert-info text-center">@TempData["Mensaje"]</div>
                    }

                    <form asp-action="Registrar" method="post">
                        <div class="mb-3">
                            <label>Nombre</label>
                            <input asp-for="Nombre" class="form-control" required autocomplete="off" />
                            <span asp-validation-for="Nombre" class="text-danger"></span>

                        </div>
                        <div class="mb-3">
                            <label>Dirección</label>
                            <input asp-for="Direccion" class="form-control" required autocomplete="off" />
                            <span asp-validation-for="Direccion" class="text-danger"></span>

                        </div>
                        <div class="mb-3">
                            <label>Teléfono</label>
                            <input asp-for="Telefono" class="form-control" required autocomplete="off" />
                            <span asp-validation-for="Telefono" class="text-danger"></span>

                        </div>
                        <div class="mb-3">
                            <label>Usuario</label>
                            <input asp-for="Usuario" class="form-control" required autocomplete="off" />
                            <span asp-validation-for="Usuario" class="text-danger"></span>

                        </div>
                        <div class="mb-3">
                            <label>Identificación</label>
                            <input asp-for="Identificacion" class="form-control" required autocomplete="off" />
                            <span asp-validation-for="Identificacion" class="text-danger"></span>

                        </div>
                        <div class="mb-3">
                            <label>Contraseña</label>
                            <input asp-for="Contrasena" type="password" class="form-control" required autocomplete="off" />
                            <span asp-validation-for="Contrasena" class="text-danger"></span>

                        </div>
                        <button type="submit" class="btn btn-success w-100">Registrarse</button>
                    </form>
                </div>
                <div class="card-footer text-center">
                    <a href="@Url.Action("Index", "Login")">← Ya tengo una cuenta</a>
                </div>
            </div>

        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
