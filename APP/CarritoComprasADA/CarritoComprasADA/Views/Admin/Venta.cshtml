@model List<CarritoComprasADA.Models.Venta>
@{
    ViewData["Title"] = "Historial de Ventas";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<h2 class="mb-3">Transacciones realizadas</h2>

<table class="table table-striped">
    <thead class="table-light">
        <tr>
            <th>#</th>
            <th>Cliente</th>
            <th>Producto</th>
            <th>Cantidad</th>
            <th>Fecha</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var t in Model)
        {
            <tr>
                <td>@t.Id</td>
                <td>@t.Cliente</td>
                <td>@t.Producto</td>
                <td>@t.Cantidad</td>
                <td>@t.Fecha.ToString("dd/MM/yyyy HH:mm")</td>
            </tr>
        }
    </tbody>
</table>


<a href="/Admin/Index" class="btn btn-secondary mb-3">
    ← Volver 
</a>
